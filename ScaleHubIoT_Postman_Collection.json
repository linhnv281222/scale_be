              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/locations/1",
              "host": ["{{base_url}}"],
              "path": ["locations", "1"]
            }
          }
        },
        {
          "name": "Update Location",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Warehouse A\",\n  \"description\": \"Updated description\",\n  \"parent_id\": null\n}"
            },
            "url": {
              "raw": "{{base_url}}/locations/1",
              "host": ["{{base_url}}"],
              "path": ["locations", "1"]
            }
          }
        },
        {
          "name": "Delete Location",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/locations/1",
              "host": ["{{base_url}}"],
              "path": ["locations", "1"]
            }
          }
        }
      ]
    },
